<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:layout_margin="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/headline1"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:gravity="center"
            android:text="IUBH Radio"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/headline2"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center|top"
            android:text="... das Radio für´s Fernstudium"
            android:textSize="11sp"
            android:textStyle="italic" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textAktuellHeadline"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="AKTUELL"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textAktuellTitel"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Titel" />

            <TextView
                android:id="@+id/textAktuellTitelValue"
                android:layout_width="323dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textAktuellInterpret"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Interpret" />

            <TextView
                android:id="@+id/textAktuellInterpretValue"
                android:layout_width="323dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textAktuellAlbum"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Album" />

            <TextView
                android:id="@+id/textAktuellAlbumValue"
                android:layout_width="323dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textAktuellJahr"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Jahr" />

            <TextView
                android:id="@+id/textAktuellJahrValue"
                android:layout_width="323dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textAktuellPlaylist"
                android:layout_width="100dp"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:text="Playlist" />

            <TextView
                android:id="@+id/textAktuellPlaylistValue"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical" />

            <Button
                android:id="@+id/buttonPlaylistVoteUp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="👍" />

            <Button
                android:id="@+id/buttonPlaylistVoteDown"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="👎" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textAktuellModerator"
                android:layout_width="100dp"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:text="Moderator" />

            <TextView
                android:id="@+id/textAktuellModeratorValue"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical" />

            <Button
                android:id="@+id/buttonModeratorVoteUp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="👍" />

            <Button
                android:id="@+id/buttonModeratorVoteDown"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="👎" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="135dp"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/buttonStop"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:text="■"
                android:textSize="18sp" />

            <Button
                android:id="@+id/buttonPlay"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:text="▶"
                android:textSize="18sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="119dp"
            android:orientation="vertical">

            <Button
                android:id="@+id/buttonWunsch"
                android:layout_width="match_parent"
                android:layout_height="85dp"
                android:layout_weight="1"
                android:text="Musikwunsch hinzufügen"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>